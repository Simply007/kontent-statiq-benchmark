@model Kentico.Kontent.Benchmark.Statiq.Models.Article
@{
    ViewBag.Title = Model.Title;
}

<a href="/">Go back to index page</a>
<div>
    <h2>@Model.Title</h2>
    @if (@Model.Image.Count() > 0)
    {
        <div class="image-wrapper" style="position: 'relative'; overflow: 'hidden';">
            <div aria-hidden="true" style="width: '100%'; paddingBottom: '66.4583%';"></div>
            <picture>
                <source srcset="@($"{Model.Image.First().Url}?w=240&amp;h=159 240w, {Model.Image.First().Url}?w=480&amp;h=319 480w,{Model.Image.First().Url}?w=960&amp;h=638 960w,{Model.Image.First().Url}?w=1440&amp;h=956 1440w,{Model.Image.First().Url}?w=1920&amp;h=1275 1920w")"
                        sizes="(max-width: 960px) 100vw, 960px" />
                <img sizes="(max-width: 960px) 100vw, 960px"
                     srcset="@($"{Model.Image.First().Url}?w=240&amp;h=159 240w, {Model.Image.First().Url}?w=480&amp;h=319 480w,{Model.Image.First().Url}?w=960&amp;h=638 960w,{Model.Image.First().Url}?w=1440&amp;h=956 1440w,{Model.Image.First().Url}?w=1920&amp;h=1275 1920w")"
                     src=@($"{Model.Image.First().Url}?w=960&amp;h=638")
                     alt=""
                     loading="lazy"
                     style="position:'absolute'; top: '0px';left: '0px'; width: '100%';height: '100%';object-fit: 'cover',object-pposition:'center center';opacity: '1';transition: 'opacity 500ms ease 0s'" />
            </picture>
        </div>
    }
    else
    {
        <div>Image can't be displayed</div>
    }
    <div>
        @Html.DisplayFor(vm => vm.Content)
    </div>

</div>